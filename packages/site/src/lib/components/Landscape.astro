---
import InteractiveSun from '@c/InteractiveSun.astro';
import Hills from './Hills.astro';
---

<header class="container">
	<div class="hills-container" aria-hidden="true">
		<Hills />
	</div>
	<div class="sun-container">
		<h1 class="title">Hi, I'm Luke!</h1>
		<InteractiveSun>
			<div class="sun"></div>
		</InteractiveSun>
	</div>
	<a class="next-section-link" href="#">psst, there's more down here â†“</a>
</header>

<style>
	.container {
		position: relative;
		inset: 0;
		overflow: hidden;
		width: 100%;
		height: 100vh;
		transition: background 0.5s ease;

		background: var(--sky-color);

		/* ANIMATIONS */
		--hide-before-animation: var(--animation-fade-in) 0s forwards;

		opacity: 0;
		animation: var(--animation-fade-in) forwards;
		animation-duration: 1s;
		animation-delay: 0;
	}

	.sun-container {
		position: absolute;
		top: 10%;
		right: 10%;
		min-width: 100px;
		min-height: 100px;
		border-radius: 9999px;
		gap: 3rem;
		overflow: hidden;

		display: flex;
		align-items: center;

		opacity: 0;
		animation: rise 2s var(--ease-in-out-3) forwards, var(--hide-before-animation),
			hide-overflow 4s forwards;
		animation-delay: 0s, 0s, 1.5s;
	}

	.sun-container .title {
		text-transform: lowercase;
		z-index: -1;
		right: 120%;
		width: max-content;
		white-space: nowrap;

		color: var(--title-color);

		font-family: 'Montserrat', cursive;
		font-weight: 700;

		opacity: 0;
		animation: var(--animation-slide-in-left) forwards, var(--animation-fade-in-bloom) forwards;
		animation-duration: 1s;
		animation-timing-function: var(--ease-out-3);
		animation-delay: 2s;
	}

	.next-section-link {
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		padding: 0.5rem 1rem;
		margin-bottom: 1rem;
		border-radius: 1rem;
		background: var(--pink-11);
		color: var(--gray-0);
		text-decoration: none;
		font-family: 'Montserrat', cursive;
		font-weight: 700;
		opacity: 0;
		animation: var(--animation-fade-in) forwards;
		animation-duration: 1s;
		animation-delay: 4s;
	}

	@keyframes hide-overflow {
		0% {
			overflow: hidden;
		}
		100% {
			overflow: visible;
		}
	}

	@keyframes rise {
		0% {
			translate: -30vw 100vh;
		}
		100% {
			translate: 0 0;
		}
	}
</style>
